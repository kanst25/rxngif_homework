<h1>Edit a picture</h1>


<form action="http://localhost:3000/update_picture/<%= params[:id]%>">
  <div>
    <label for="the_caption">Caption:</label>
    <input id="the_caption" type="text" value="<%=@picture_edited.caption%>" name="caption">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" type="text" value="<%=@picture_edited.source%>" name="source">
  </div>
  <div>
    <input type="submit" value="Update Picture">
  </div>
</form>